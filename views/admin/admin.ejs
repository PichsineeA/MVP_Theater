<%- include("../partials/headerAdmin.ejs") %>

    <main>
        <div class="album py-5">
            <div class="container d-flex flex-wrap justify-content-center">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                    data-bs-target="#exampleModalFullscreen">Add Movie</button>
            </div>
            <br><br>
            <div class="container">

                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

                    <% movie.forEach(function(movie){ %>
                            <div class="col">
                                <div class="card shadow-sm">
                                    <img class="bd-placeholder-img card-img-top" height="10%"
                                        src="<%= movie.image %>">
                                    <div class="card-body">
                                        <p class="card-text">
                                            <%= movie.date %>
                                        </p>
                                        <p class="card-text">
                                            <%= movie.name %>
                                        </p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                                <a href="/admin/<%= movie._id %>/edit"
                                                    class="btn btn-sm btn-outline-secondary">Edit</a>
                                                <form action="/admin/<%= movie._id %>?_method=DELETE" method="post">
                                                    <button type="submit" class="btn btn-sm btn-outline-secondary" >Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>

                </div>
            </div>
        </div>
    </main>
<%- include("../partials/footerAdmin.ejs") %>
