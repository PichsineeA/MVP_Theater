<%- include("../partials/header.ejs") %>

<main>

    <div class="container">
        <div class="from bg">
            <div class="p-6 p-md-5 mb-4">

                <div class="container d-flex flex-wrap justify-content-center">
                    <a href="#"
                        class="d-flex align-items-center mb-3 mb-lg-0 me-lg-auto text-dark text-decoration-none">
                        <h1 class="History">Purchase History</h1>
                    </a>
                </div>

                <div class="album py-5">
                    <div class="container">
        
                      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        
        
                        <% if(transaction.length==0) { %>
                          <div class='mx-3 mt-3'>
                            <h3>No transaction in history</h3>
                          </div>
                          <% } else { %>
                            <% transaction.forEach((transaction)=> { %>
                                <div class="card">
                                    <div class="card-body">
                                        <p class="card-text">
                                            <%= transaction.movie %>
                                          </p>
                                          <p class="card-text">
                                            <%= transaction.branch %>
                                          </p>
                                          <p class="card-text">
                                            <%= transaction.showtime %>
                                          </p>
                                          <p class="card-text">
                                            <%= transaction.theater %>
                                          </p>
                                          <p class="card-text">
                                            <%= transaction.seat %>
                                          </p>
                                          <p class="card-text">
                                            <%= transaction.total %>
                                          </p>
                                    </div>
                                  </div>
                              <% }); %>
                                <% } %>
        
                      </div>
                    </div>
                  </div>


            </div>
        </div>
        <div class="container d-flex flex-wrap justify-content-center">
            <p class="lead">
                <a href="/user/<%= currentUser._id %>/profile" class="btn btn-lg btn-secondary fw-bold border-white">Profile</a>
                <a href="/user/<%= currentUser._id %>/favorite" class="btn btn-lg btn-secondary fw-bold border-white">Favorite</a>
            </p>
        </div>
    </div>

</main>

<%- include("../partials/footer.ejs") %>